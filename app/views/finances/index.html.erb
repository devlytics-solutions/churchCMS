<h1>Finances</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Amount</th>
      <th>Branch</th>
    </tr>
  </thead>
  <tbody>
    <% @finances.each do |finance| %>
      <tr>
        <td><%= finance.date %></td>
        <td><%= finance.amount %></td>
        <td><%= finance.branch.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
